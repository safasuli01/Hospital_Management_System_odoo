<odoo>
  <record id="patient_print" model="ir.actions.report">
    <field name="name">Patient Print</field>
    <field name="model">hms.patient</field>
    <field name="report_type">qweb-html</field>
    <field name="report_name">hms.patient_report_template</field>
    <field name="report_file">hms.patient_report_template</field>
    <field name="binding_model_id" ref="hms.model_hms_patient"/>
    <field name="binding_type">report</field>
    <field name="print_report_name">Patient - [object.f_name]</field>

  </record>

  <template id="patient_report_template">
      <t t-call="web.html_container">
          <t t-foreach="docs" t-as="doc">
              <t t-call="web.basic_layout">
        <div class="page">
            <h1>Patient Report</h1>
            <h3>Patient Information</h3>
            <div class="row">
                <div class="col-6">
                    <strong>First Name:</strong>
                    <span t-esc="doc.f_name"/>
                </div>
                <div class="col-6">
                    <strong>Last Name:</strong>
                    <span t-esc="doc.l_name"/>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <strong>Birth Date:</strong>
                    <span t-esc="doc.b_date"/>
                </div>
                <div class="col-6">
                    <strong>Age:</strong>
                    <span t-esc="doc.age"/>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <strong>Email:</strong>
                    <span t-esc="doc.email"/>
                </div>
                <div class="col-6">
                    <strong>Address:</strong>
                    <span t-esc="doc.address"/>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <strong>Blood Type:</strong>
                    <span t-esc="doc.blood_type"/>
                </div>
                <div class="col-6">
                    <strong>State:</strong>
                    <span t-esc="doc.state"/>
                </div>
            </div>
            <t t-if="doc.image">
                <div class="row">
                    <div class="col-12">
                        <img t-att-src="doc.image" style="max-width: 200px; max-height: 200px;"/>
                    </div>
                </div>
            </t>
            <h3>Department</h3>
            <div class="row">
                <div class="col-12">
                    <strong>Department Name:</strong>
                    <span t-esc="doc.dept_id.name"/>
                </div>
            </div>
            <h3>Assigned Doctors</h3>
            <t t-if="doc.doctor_ids">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Department</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.doctor_ids" t-as="doctor">
                            <tr>
                                <td><span t-esc="doctor.f_name"/></td>
                                <td><span t-esc="doctor.l_name"/></td>
                                <td><span t-esc="doctor.dept_id.name"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
            <t t-if="not doc.doctor_ids">
                <p>No doctors assigned.</p>
            </t>
            <h3>Patient Log History</h3>
            <t t-if="doc.log_history_ids and not doc.hide_log_history">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Old State</th>
                            <th>New State</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.log_history_ids" t-as="log">
                            <tr>
                                <td><span t-esc="log.description"/></td>
                                <td><span t-esc="log.old_state"/></td>
                                <td><span t-esc="log.new_state"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
<!--            <t t-if="not doc.log_history_ids">-->
<!--                <p>No log history or history hidden.</p>-->
<!--            </t>-->
        </div>
    </t>
          </t>
      </t>

</template>

</odoo>
